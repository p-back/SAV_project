<Page x:Class="ball_in_a_maze.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ball_in_a_maze"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60" Text="The ball-in-a-maze game!"></TextBlock>
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="1" Margin="15,30" ItemsSource="{Binding COMPorts}" FontStretch="UltraExpanded" Name="cboxPorts"></ComboBox>
            <TextBlock Grid.Column="0" Margin="5,30" FontSize="20"> Choose an active COM port for a connection to the minized board.</TextBlock>
        </Grid>

        <Button Grid.Row="2" Margin="100,40" FontSize="30" Name="btnConnect" Click="btnConnect_Click">Connect</Button>

        
    </Grid>
</Page>
